	"item": [
		{
			"name": "General",
			"item": [
				{
					"name": "Root",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/",
							"host": ["{{base_url}}"],
							"path": [""]
						},
						"description": "Welcome message"
					}
				},
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/health",
							"host": ["{{base_url}}"],
							"path": ["health"]
						},
						"description": "Health check endpoint"
					}
				}
			]
		},
		{
			"name": "Cats",
			"item": [
				{
					"name": "Create Cat",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Fluffy\",\n  \"experience\": 5,\n  \"breed\": \"Persian\",\n  \"salary\": 5000.00\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/cats/",
							"host": ["{{base_url}}"],
							"path": ["cats", ""]
						},
						"description": "Create a new cat. Breed must be validated against the Cat API."
					}
				},
				{
					"name": "List Cats",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/cats/?skip=0&limit=100",
							"host": ["{{base_url}}"],
							"path": ["cats", ""],
							"query": [
								{
									"key": "skip",
									"value": "0",
									"description": "Number of records to skip"
								},
								{
									"key": "limit",
									"value": "100",
									"description": "Maximum number of records to return"
								}
							]
						},
						"description": "List all cats with pagination"
					}
				},
				{
					"name": "Get Cat by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/cats/{{cat_id}}",
							"host": ["{{base_url}}"],
							"path": ["cats", "{{cat_id}}"],
							"variable": [
								{
									"key": "cat_id",
									"value": "1"
								}
							]
						},
						"description": "Get a single cat by ID"
					}
				},
				{
					"name": "Update Cat Salary",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"salary\": 5500.00\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/cats/{{cat_id}}",
							"host": ["{{base_url}}"],
							"path": ["cats", "{{cat_id}}"],
							"variable": [
								{
									"key": "cat_id",
									"value": "1"
								}
							]
						},
						"description": "Update cat's salary (only salary can be updated)"
					}
				},
				{
					"name": "Delete Cat",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/cats/{{cat_id}}",
							"host": ["{{base_url}}"],
							"path": ["cats", "{{cat_id}}"],
							"variable": [
								{
									"key": "cat_id",
									"value": "1"
								}
							]
						},
						"description": "Remove a cat"
					}
				}
			]
		},
		{
			"name": "Missions",
			"item": [
				{
					"name": "Create Mission",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"targets\": [\n    {\n      \"name\": \"Target 1\",\n      \"country\": \"USA\",\n      \"notes\": \"Primary target\"\n    },\n    {\n      \"name\": \"Target 2\",\n      \"country\": \"UK\",\n      \"notes\": \"Secondary target\"\n    }\n  ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/missions/",
							"host": ["{{base_url}}"],
							"path": ["missions", ""]
						},
						"description": "Create a new mission with targets. Each target is unique to the mission. Must have 1-3 targets."
					}
				},
				{
					"name": "List Missions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/missions/?skip=0&limit=100",
							"host": ["{{base_url}}"],
							"path": ["missions", ""],
							"query": [
								{
									"key": "skip",
									"value": "0",
									"description": "Number of records to skip"
								},
								{
									"key": "limit",
									"value": "100",
									"description": "Maximum number of records to return"
								}
							]
						},
						"description": "List all missions with pagination"
					}
				},
				{
					"name": "Get Mission by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/missions/{{mission_id}}",
							"host": ["{{base_url}}"],
							"path": ["missions", "{{mission_id}}"],
							"variable": [
								{
									"key": "mission_id",
									"value": "1"
								}
							]
						},
						"description": "Get a single mission by ID"
					}
				},
				{
					"name": "Assign Cat to Mission",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"cat_id\": 1\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/missions/{{mission_id}}/assign-cat",
							"host": ["{{base_url}}"],
							"path": ["missions", "{{mission_id}}", "assign-cat"],
							"variable": [
								{
									"key": "mission_id",
									"value": "1"
								}
							]
						},
						"description": "Assign a cat to a mission"
					}
				},
				{
					"name": "Update Mission Targets",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"targets\": [\n    {\n      \"name\": \"Updated Target 1\",\n      \"country\": \"Canada\",\n      \"notes\": \"Updated notes\"\n    },\n    {\n      \"name\": \"Updated Target 2\",\n      \"country\": \"Germany\",\n      \"notes\": \"New target\"\n    },\n    {\n      \"name\": \"Updated Target 3\",\n      \"country\": \"France\",\n      \"notes\": \"Third target\"\n    }\n  ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/missions/{{mission_id}}/targets",
							"host": ["{{base_url}}"],
							"path": ["missions", "{{mission_id}}", "targets"],
							"variable": [
								{
									"key": "mission_id",
									"value": "1"
								}
							]
						},
						"description": "Update mission targets. Cannot update if mission is completed."
					}
				},
				{
					"name": "Mark Mission Complete",
					"request": {
						"method": "PUT",
						"header": [],
						"url": {
							"raw": "{{base_url}}/missions/{{mission_id}}/complete",
							"host": ["{{base_url}}"],
							"path": ["missions", "{{mission_id}}", "complete"],
							"variable": [
								{
									"key": "mission_id",
									"value": "1"
								}
							]
						},
						"description": "Mark a mission as completed"
					}
				},
				{
					"name": "Update Target Notes",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"notes\": \"Updated notes for this target\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/missions/{{mission_id}}/targets/{{target_id}}/notes",
							"host": ["{{base_url}}"],
							"path": ["missions", "{{mission_id}}", "targets", "{{target_id}}", "notes"],
							"variable": [
								{
									"key": "mission_id",
									"value": "1"
								},
								{
									"key": "target_id",
									"value": "1"
								}
							]
						},
						"description": "Update notes for a target. Notes cannot be updated if target or mission is completed."
					}
				},
				{
					"name": "Delete Mission",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/missions/{{mission_id}}",
							"host": ["{{base_url}}"],
							"path": ["missions", "{{mission_id}}"],
							"variable": [
								{
									"key": "mission_id",
									"value": "1"
								}
							]
						},
						"description": "Remove a mission. A mission cannot be deleted if it is already assigned to a cat."
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "cat_id",
			"value": "1",
			"type": "string"
		},
		{
			"key": "mission_id",
			"value": "1",
			"type": "string"
		},
		{
			"key": "target_id",
			"value": "1",
			"type": "string"
		}
	]
}

