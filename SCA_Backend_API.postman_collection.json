{
	"info": {
		"name": "SCA Backend API",
		"description": "Postman collection for SCA Backend API - FastAPI application with Cats and Missions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "sca-backend"
